{
  "name": "book-a-room",
  "version": "1.0.0",
  "description": "A small company has an internal system to handle their meeting rooms",
  "main": "server.js",
  "scripts": {
    "start": "node build/server.js",
    "predev": "npm run swagger",
    "prebuild": "npm run swagger",
    "build": "tsc",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "swagger": "tsoa spec",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahmadalauddin/book-a-room.git"
  },
  "author": "Muhammad Ahmad",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ahmadalauddin/book-a-room/issues"
  },
  "homepage": "https://github.com/ahmadalauddin/book-a-room#readme",
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "swagger-ui-express": "^4.4.0",
    "tsoa": "^4.1.0",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.38",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^7.2.1",
    "nodemon": "^2.0.16",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/server.ts"
  }
}
